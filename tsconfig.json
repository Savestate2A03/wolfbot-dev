{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "ESNext",
        "target": "ES2023",
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "./build",
        "paths": {
            "@lib/*": ["./lib/*"],
            "@commands/*": ["./commands/*"],
            "@config": ["./config.json"]
        }
    },
    "include": ["**/*"],
    "exclude": ["**/*.spec.ts", "eslint.config.mjs", "prettier.config.mjs"]
}
